{
  "customizations": {
    "vscode": {
      "extensions": [
        "rvest.vs-code-prettier-eslint",
        "github.codespaces",
        "github.copilot",
        "github.copilot-chat",
        "ms-azuretools.vscode-docker"
      ]
    }
  },

  "features": {
    "ghcr.io/devcontainers/features/desktop-lite:1": {
      "version": "latest",
      "noVncVersion": "1.2.0",
      "password": "p",
      "webPort": "6080",
      "vncPort": "5901"
    }
  },

  "forwardPorts": [5901, 6080],

  "image": "mcr.microsoft.com/devcontainers/universal:2-linux",

  "name": "MM Extension Codespace",

  "portsAttributes": {
    "5901": {
      "label": "local vnc"
    },
    "6080": {
      "label": "noVNC web"
    }
  },

  "updateContentCommand": "yarn --immutable"
}
